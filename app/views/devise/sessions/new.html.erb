<div class="devise__wrapper">
	<div class="devise__wapper_flex">
		<div class="logo"><%= show_svg('logo_oshare.svg') %></div>

		<h2>Welcome to Oshare</h2>

		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="field"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email address" %></div>
			<div class="field"><%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %></div>
			<% if devise_mapping.rememberable? %>
				<div class="checkbox">
					<%= f.check_box :remember_me %>
					<%= f.label :remember_me, class: "checkbox__label" %>
				</div>
			<% end %>

			<div class="actions"><%= f.submit "Log in" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>