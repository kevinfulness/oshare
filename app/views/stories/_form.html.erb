<%= form_for Story.new do |f| %>

	<div class="upload__preview"><img class="upload__preview_image" src="#" alt="your image"></div>
	<div class="upload__wrap">
		<%= f.file_field :image, class: "upload__field" %>
		<%= f.label :image, 'Select Image', class: "upload__button" %>
	</div>
	<div><%= f.text_area :caption, placeholder: "caption" %></div>
	<div><%= f.submit 'post' %></div>

<% end %>